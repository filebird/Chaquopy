<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding4"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"/>

    <TextView
        android:id="@+id/id_main_bit"
        android:layout_below="@id/id_main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding4"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"/>
    <TextView
        android:id="@+id/id_main_code"
        android:layout_below="@id/id_main_bit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding4"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"/>
    <TextView
        android:id="@+id/id_main_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding10"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>